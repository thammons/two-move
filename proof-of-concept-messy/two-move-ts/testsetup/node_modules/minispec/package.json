{
  "name": "minispec",
  "version": "1.1.3",
  "description": "Lightweight test/spec execution engine",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "files": [
    "dist/cjs",
    "dist/esm"
  ],
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "jsnext:main": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./reporters": {
      "import": "./dist/esm/reporters/index.js",
      "require": "./dist/cjs/reporters/index.js"
    }
  },
  "scripts": {
    "build:commonjs": "tsc --target es5 --outDir dist/cjs --module commonjs --declaration",
    "build:es": "tsc --target es6 --outDir dist/esm --module es6 --declaration",
    "build": "npm run build:commonjs && npm run build:es",
    "prepublishOnly": "npm run build",
    "test": "ts-node --esm spec/minispec_entrypoint.ts",
    "validate": "npm run build && ts-node --esm acceptance/minispec_entrypoint.ts",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/kao98/minispec.git"
  },
  "keywords": [
    "spec",
    "light",
    "lightweight",
    "test",
    "mini",
    "minimal",
    "simple",
    "typescript",
    "esm"
  ],
  "author": "Aur√©lien Reeves (Kao ..98)",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/kao98/minispec/issues"
  },
  "homepage": "https://www.minispec-js.com/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "reindent-template-literals": "^1.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
